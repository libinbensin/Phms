<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >  
    <RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:orientation="vertical"
	    >   
	    <RelativeLayout 
	        android:id="@+id/box_layout"
	        android:orientation="vertical"
	        android:layout_width="935dip"
	        android:layout_height="434dip"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/box"
	        ><!-- android:background="@drawable/box" -->
	        <TextView 
	            android:id="@+id/tips_text"
	            android:layout_marginTop="28dip"
	            android:layout_marginLeft="30dip"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_green"
	            android:text="根据最近一年的体验和感觉，回答以下问题："
	            android:textSize="22sp"/>
	        <TextView 
	            android:id="@+id/title_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="102dip"
	            android:layout_marginLeft="40dip"
	            android:textColor="@color/text_gray"
	            android:text="问卷：你感觉（1/20）"
	            android:textSize="22sp"/>
	        <TextView 
	            android:id="@+id/question_text"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="164dip"
	            android:layout_marginLeft="40dip"
	            android:textColor="@color/text_gray"
	            android:text="（1）我感觉闷闷不乐吗，情绪低沉？"
	            android:textSize="22sp"/>
		    <RadioGroup 
		        android:id="@+id/choice_radios"
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="256dip"
		        android:layout_height="wrap_content">
				<RadioButton 
					android:id="@+id/radio_choice_a" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					style="@style/custom_radio_style"
					android:textColor="@color/text_black"
					android:textSize="22sp"
					android:text="没有或很少时间"/>
				<RadioButton 
					android:id="@+id/radio_choice_b" 
					android:layout_marginLeft="30dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					style="@style/custom_radio_style"
					android:textColor="@color/text_black"
					android:textSize="22sp"
					android:text="少部分时间"/>
				<RadioButton 
					android:id="@+id/radio_choice_c" 
					android:layout_marginLeft="30dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					style="@style/custom_radio_style"
					android:textColor="@color/text_black"
					android:textSize="22sp"
					android:text="相当多时间"/>
				<RadioButton 
					android:id="@+id/radio_choice_d" 
					android:layout_marginLeft="30dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					style="@style/custom_radio_style"
					android:textColor="@color/text_black"
					android:textSize="22sp"
					android:text="绝大部分或全部时间"/>
		    </RadioGroup>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/box_layout">
	        <Button
	       	    android:id="@+id/previous_question_btn"
	       	    android:layout_width="131dip"
	       	    android:layout_height="49dip"
	       	    android:layout_centerVertical="true"
	       	    android:background="@drawable/previous_btn_bg" />
	        <Button
	       	    android:id="@+id/next_question_btn"
	       	    android:layout_toRightOf="@+id/previous_question_btn"
	       	    android:layout_marginLeft="80dip"
	       	    android:layout_width="131dip"
	       	    android:layout_height="49dip"
	       	    android:layout_centerVertical="true"
	       	    android:background="@drawable/next_btn_bg" />
	    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>