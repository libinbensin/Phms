<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp55"
    android:background="@color/bl_bg_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/id_text"
        style="@style/listview_title_text_style"
        android:text="序号" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <TextView
        android:id="@+id/name_text"
        style="@style/listview_title_text_style"
        android:text="@string/jtcy_name_text" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <TextView
        android:id="@+id/sex_text"
        style="@style/listview_title_text_style"
        android:text="@string/jtcy_xb_text" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <TextView
        android:id="@+id/type_text"
        style="@style/listview_title_text_style"
        android:text="类型" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <TextView
        android:id="@+id/org_text"
        style="@style/listview_title_text_style"
        android:text="机构" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <TextView
        android:id="@+id/check_time_text"
        style="@style/listview_title_text_style"
        android:text="检查时间" />

</LinearLayout>