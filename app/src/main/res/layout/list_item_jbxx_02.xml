<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="6dip"
           android:layout_marginLeft="30dip"
           >
		<TextView 
		    android:id="@+id/index_text"
		 	android:layout_marginLeft="12dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
		    android:textColor="@color/text_gray"
		    android:textSize="22sp"
		    android:text="1."/>
		<TextView 
		    android:id="@+id/name_text"
		 	android:layout_marginLeft="46dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
		    android:textColor="@color/text_gray"
		    android:textSize="22sp"
		    android:text="脑卒中"/>
		<TextView 
		    android:id="@+id/diagnose_time_text"
		 	android:layout_marginLeft="130dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
		    android:textColor="@color/text_gray"
		    android:textSize="22sp"
		    android:text="确诊时间"/>
		<TextView 
		    android:id="@+id/time_text"
		 	android:layout_marginLeft="250dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
		    android:textColor="@color/text_gray"
		    android:textSize="22sp"
		    android:text="1999年12月28日"/>
		<Button
       	    android:id="@+id/edit_button"
       	    android:layout_width="119dip"
       	    android:layout_height="45dip"
       	    android:layout_marginLeft="524dip"
       	    android:layout_gravity="center_horizontal"
       	    android:background="@drawable/edit_btn_bg" />
		<Button
       	    android:id="@+id/delete_button"
       	    android:layout_width="119dip"
       	    android:layout_height="45dip"
       	    android:layout_marginLeft="670dip"
       	    android:layout_gravity="center_horizontal"
       	    android:background="@drawable/delete_btn_bg" />
	</RelativeLayout>
</LinearLayout>