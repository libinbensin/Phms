<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="top"
     >
     <ImageView 
        android:id="@+id/backBtn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/back_button_selector"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:onClick="doClick"
        /> 
       <!-- title -->
    <TextView
         android:id="@+id/deviceName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="30dp"
         android:textSize="22dp"
         android:layout_centerHorizontal="true"
         android:text="设置计步器的用户信息"
         />
 
    <!--  divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:background="#DADADC" >     
    </View>

	
</RelativeLayout>
        
        <TableLayout
            android:layout_width="fill_parent"        
            android:layout_height="wrap_content"        
            android:layout_margin="10dp"            
        >
     

  <TableRow>
    <TextView 
        android:text="步长:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pStepLenght"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  
   <TableRow>
    <TextView 
        android:text="身高："
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
       android:id="@+id/pHeight"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  <TableRow>
    <TextView 
        android:text="体重:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pWeight"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  
  <TableRow>
    <TextView 
        android:text="星期开始的时间点:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pStartTime"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  
  <TableRow>
    <TextView 
        android:text="周目标步数:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pTargetStepNumber"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  
  <TableRow>
    <TextView 
        android:text="周目标距离:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pTargetStepDistance"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  
  <TableRow>
    <TextView 
        android:text="周目标卡路里:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pTargetCalories"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
  
    <TableRow>
    <TextView 
        android:text="周目标运动量:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pTargetStepExercise"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
    <TableRow>
    <TextView 
        android:text="体重单位:"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />

    <EditText 
     	android:id="@+id/pWeightUnit"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" />
  </TableRow>
    
  
   </TableLayout>

        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_single_button"
            android:onClick="doClick"
            android:text="确定"
            android:textColor="@drawable/selector_single_button_text" />

</LinearLayout>
