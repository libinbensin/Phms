                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="分钟/次"
                android:textColor="@color/text_gray"
                android:textSize="20sp" />
        </LinearLayout>
