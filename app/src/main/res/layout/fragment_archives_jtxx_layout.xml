<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spinnerutil="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp20"
    android:paddingTop="@dimen/dp20" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jtxx_dabh_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <TextView
                android:id="@+id/jtdabhTextView"
                android:layout_width="170.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="130.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jtxx_type_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <com.cking.phss.widget.SpinnerUtil
                android:id="@+id/jtlxSpinnerUtil"
                spinnerutil:name="jtlx"
                style="@style/spinnerbtndropdown"
                android:background="@drawable/spinner_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jtxx_name_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <EditText
                android:id="@+id/hzxmEditText"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:background="@drawable/edit_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="130.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jtxx_num_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <EditText
                android:id="@+id/rksEditText"
                android:layout_width="150.0dip"
                android:layout_height="40.0dip"
                android:background="@drawable/edit_bg"
                android:numeric="integer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:text="@string/jtxx_ren_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="130.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/jtxx_jjzk_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <com.cking.phss.widget.SpinnerUtil
                android:id="@+id/jjzkSpinnerUtil"
                spinnerutil:name="jjzk"
                style="@style/spinnerbtndropdown"
                android:background="@drawable/spinner_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/jtxx_nsr_text"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <com.adinnet.xd.medical.widget.RelativeGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/nrjsr01Radiobutton"
                style="@style/radio_button_style"
                android:text="@string/jtxx_1000_text" />

            <RadioButton
                android:id="@+id/nrjsr02Radiobutton"
                android:layout_marginLeft="185.0dip"
                android:layout_toRightOf="@id/nrjsr01Radiobutton"
                style="@style/radio_button_style"
                android:text="@string/jtxx_1999_text" />

            <RadioButton
                android:id="@+id/nrjsr03Radiobutton"
                android:layout_marginLeft="145.0dip"
                android:layout_toRightOf="@id/nrjsr02Radiobutton"
                style="@style/radio_button_style"
                android:text="@string/jtxx_3999_text" />

            <RadioButton
                android:id="@+id/nrjsr04Radiobutton"
                android:layout_alignLeft="@id/nrjsr01Radiobutton"
                android:layout_below="@id/nrjsr01Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/jtxx_7999_text" />

            <RadioButton
                android:id="@+id/nrjsr05Radiobutton"
                android:layout_alignLeft="@id/nrjsr02Radiobutton"
                android:layout_below="@id/nrjsr02Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/jtxx_8000_text" />
        </com.adinnet.xd.medical.widget.RelativeGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/jtxx_hsx_text"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <com.adinnet.xd.medical.widget.RelativeGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/hsx01Radiobutton"
                style="@style/radio_button_style"
                android:text="@string/jtxx_czjm_text" />

            <RadioButton
                android:id="@+id/hsx02Radiobutton"
                android:layout_marginLeft="@dimen/dp180"
                android:layout_toRightOf="@+id/hsx01Radiobutton"
                style="@style/radio_button_style"
                android:text="@string/jtxx_ybnh_text" />

            <RadioButton
                android:id="@+id/hsx03Radiobutton"
                android:layout_marginLeft="@dimen/dp180"
                android:layout_toRightOf="@+id/hsx02Radiobutton"
                style="@style/radio_button_style"
                android:text="@string/jtxx_dbh_text" />

            <RadioButton
                android:id="@+id/hsx04Radiobutton"
                android:layout_alignLeft="@+id/hsx01Radiobutton"
                android:layout_below="@+id/hsx01Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/jtxx_wbh_text" />

            <RadioButton
                android:id="@+id/hsx05Radiobutton"
                android:layout_alignLeft="@+id/hsx02Radiobutton"
                android:layout_below="@+id/hsx02Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/jtxx_pkh_text" />

            <RadioButton
                android:id="@+id/hsx06Radiobutton"
                android:layout_alignLeft="@+id/hsx03Radiobutton"
                android:layout_below="@+id/hsx03Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/jtxx_tkh_text" />

            <RadioButton
                android:id="@+id/hsx07Radiobutton"
                android:layout_alignLeft="@+id/hsx04Radiobutton"
                android:layout_below="@+id/hsx04Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/jtxx_ljs_text" />

            <RadioButton
                android:id="@+id/hsx08Radiobutton"
                android:layout_alignLeft="@+id/hsx05Radiobutton"
                android:layout_below="@+id/hsx05Radiobutton"
                android:layout_marginTop="@dimen/dp20"
                style="@style/radio_button_style"
                android:text="@string/cm_qt_text" />
        </com.adinnet.xd.medical.widget.RelativeGroup>
    </LinearLayout>

</LinearLayout>