<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" 
    android:background="@drawable/grid">
  
    <TextView
        android:id="@+id/target_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/check_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/target_name_text"
        android:layout_below="@id/target_name_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/target_name_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/check_time_text"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/unit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/target_name_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/result_text"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reference_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/target_name_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/unit_text"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/exce_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/target_name_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/reference_text"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="18sp" />
</RelativeLayout>