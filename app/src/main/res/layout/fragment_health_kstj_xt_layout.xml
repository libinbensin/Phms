<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spinnerutil="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp50"
    android:paddingRight="@dimen/dp50"
    android:paddingTop="@dimen/dp10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jktj_xtjc_text"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dp18" />

                <Button
                    android:id="@+id/xtjcButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comfrim_bg"
                    android:text="@string/jktj_get_data_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/jktj_jclx_text"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dp18" />

                <com.cking.phss.widget.SpinnerUtil
                    android:id="@+id/jclxSpinnerUtil"
                    spinnerutil:name="jclx"
                    style="@style/spinnerbtndropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/jktj_xtz_text"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dp18" />

                <EditText
                    android:id="@+id/xtzEditText"
                    android:layout_width="130.0dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"
                    android:numeric="decimal"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dp20" />

                <TextView
                    android:id="@+id/xtzdwTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="@string/cm_mmol_l_text"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dp18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/jktj_conclusion_text"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/dp18" />

                <EditText
                    android:id="@+id/jlEditText"
                    android:layout_width="170.0dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_trans_bg"
                    android:enabled="false"
                    android:textSize="@dimen/dp20" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xy_window"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tsxxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="left"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>