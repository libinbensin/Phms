<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@id/layout_ps_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/menu_selected_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding25"
        android:paddingTop="@dimen/padding10" >

        <ImageView
            android:id="@id/imageview_ps_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/menu_personal_normal" />

        <TextView
            android:id="@id/textview_ps_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="@string/menu_person_text"
            android:textColor="@color/white"
            android:textSize="@dimen/dp20" />

        <ImageView
            android:id="@+id/imageview_bk_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/bk"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/layout_ps_nor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding25"
        android:paddingTop="@dimen/dp10"
        android:visibility="gone" >

        <ImageView
            android:id="@id/imageview_ps_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/menu_personal_pressed" />

        <TextView
            android:id="@id/textview_ps_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="@string/menu_person_text"
            android:textColor="@color/personal_textcolor"
            android:textSize="@dimen/dp20" />

        <ImageView
            android:id="@+id/imageview_bk_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp2"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/bk"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>