<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:background="@drawable/grid" >

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="姓名"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:background="@drawable/grid" >

        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="性别"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="年龄"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/link_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系电话"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份证"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <com.cking.phss.widget.ScrollingTextView
            android:id="@+id/address_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_centerInParent="true"
            android:text="住址"
            android:textColor="@color/text_gray"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:singleLine="true" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/disType_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="疾病名称"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rptDate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="报卡日期"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rptStatus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="报卡状态"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/approvedDate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="审核日期"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:background="@drawable/grid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/approvedFlag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="审核状态"
            android:textColor="@color/text_gray"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>