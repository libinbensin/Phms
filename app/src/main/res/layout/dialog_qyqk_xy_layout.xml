<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spinnerutil="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="900dip"
    android:layout_height="600dip"
    android:background="@drawable/edit_box_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="520dip"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp50"
        android:paddingRight="@dimen/dp50"
        android:paddingTop="@dimen/dp30" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" >

            <WebView
                android:id="@+id/xyWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp20"
            android:background="@drawable/comfrim_bg"
            android:text="同意"
            android:textColor="@color/confrim_text_color"
            android:textSize="@dimen/dp20" />

        <Button
            android:id="@+id/btyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:background="@drawable/cancel_bg"
            android:text="不同意"
            android:textColor="@color/cancel_text_color"
            android:textSize="@dimen/dp20" />
    </LinearLayout>

</LinearLayout>