<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xd_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dip" >

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:textColor="#61A5AE"
            android:textSize="26sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/jigouTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dip"
        android:textColor="#61A5AE"
        android:textSize="30dip" />

    <LinearLayout
        android:layout_width="413dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_edit"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:src="@drawable/login_user" />

            <EditText
                android:id="@+id/username_text"
                android:layout_width="360dip"
                android:layout_height="53dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/transparent"
                android:hint="用户名"
                android:paddingLeft="30dip"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_edit"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:src="@drawable/login_password" />

            <EditText
                android:id="@+id/password_text"
                android:layout_width="360dip"
                android:layout_height="53dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/transparent"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="30dip"
                android:textSize="28sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/remember_pwd"
            style="@style/CheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="23dip"
            android:text="  记住密码"
            android:textColor="@color/text_gray"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/network_login_button"
                android:layout_width="174dip"
                android:layout_height="49dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_button_bg"
                android:text="网络登录"
                android:textColor="@color/custom_text_color"
                android:textSize="@dimen/dp20" />

            <Button
                android:id="@+id/local_login_button"
                android:layout_width="174dip"
                android:layout_height="49dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dip"
                android:background="@drawable/custom_button_bg"
                android:text="本地登录"
                android:textColor="@color/custom_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/banquanImageView"
            android:layout_width="291dip"
            android:layout_height="67dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="10.0dip"
            android:textColor="#61A5AE"
            android:textSize="26sp" />
    </RelativeLayout>

</LinearLayout>