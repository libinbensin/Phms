<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text0"
            style="@style/compound_jzs_button_style"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="right|center_vertical"
            android:text="母亲妊娠期患病情况："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.CheckBoxGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            app:switchItem="@+id/zz01CheckBox"
            app:widgetTag="儿童访视报卡-产时情况-母亲-母亲妊娠期患病情况" >

            <CheckBox
                android:id="@+id/jbzd01CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_toRightOf="@+id/text0" />

            <CheckBox
                android:id="@+id/jbzd02CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_marginLeft="18.0dip"
                android:layout_toRightOf="@+id/jbzd01CheckBox" />

            <CheckBox
                android:id="@+id/jbzd03CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/jbzd02CheckBox" />

            <net.xinhuaxing.widget.EditText
                style="@style/text_edittext_style"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/jbzd03CheckBox"
                app:referentId="@+id/jkzk03RadioButton" />
        </net.xinhuaxing.widget.CheckBoxGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jktj_title"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingRight="30.0dip"
                android:text="产时情况-新生儿"
                android:textColor="@color/jz_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/jktj_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="出生头围(cm)：" />

            <net.xinhuaxing.widget.EditText
                style="@style/integer_edittext_style"
                android:layout_width="80dip"
                android:layout_height="40.0dip"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-出生头围(cm)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="出生身长(cm)：" />

            <net.xinhuaxing.widget.EditText
                style="@style/integer_edittext_style"
                android:layout_width="80dip"
                android:layout_height="40.0dip"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-出生身长(cm)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="@color/text_gray" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:text="出生情况：" />

            <net.xinhuaxing.widget.Spinner
                style="@style/spinnerbtndropdown"
                android:background="@drawable/spinner_bg"
                android:prompt="@string/gender_prompt"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-出生情况" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="出生体重(kg)：" />

            <net.xinhuaxing.widget.EditText
                style="@style/decimal_edittext_style"
                android:layout_width="80dip"
                android:layout_height="40.0dip"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-出生体重(kg)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="目前体重(kg)：" />

            <net.xinhuaxing.widget.EditText
                style="@style/decimal_edittext_style"
                android:layout_width="80dip"
                android:layout_height="40.0dip"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-目前体重(kg)" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="新生儿窒息："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/jbjzsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="儿童访视报卡-产时情况-新生儿-新生儿窒息" >

            <RadioButton
                android:id="@+id/jbjzs01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/jbjzs02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />
        </net.xinhuaxing.widget.RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="Apgar评分："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.CheckBoxGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            app:switchItem="@+id/zz01CheckBox"
            app:widgetTag="儿童访视报卡-产时情况-新生儿-Apgar评分" >

            <CheckBox
                android:id="@+id/apgar01CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_toRightOf="@+id/text0" />

            <CheckBox
                android:id="@+id/apgar02CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_marginLeft="18.0dip"
                android:layout_toRightOf="@+id/apgar01CheckBox" />

            <net.xinhuaxing.widget.Spinner
                android:id="@+id/apgar02Spinner"
                style="@style/spinnerbtndropdown"
                android:layout_width="100.0dip"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/apgar02CheckBox"
                android:background="@drawable/spinner_bg"
                android:prompt="@string/gender_prompt"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-Apgar评分-1分钟" />

            <CheckBox
                android:id="@+id/apgar03CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/apgar02Spinner" />

            <net.xinhuaxing.widget.Spinner
                android:id="@+id/apgar03Spinner"
                style="@style/spinnerbtndropdown"
                android:layout_width="100.0dip"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/apgar03CheckBox"
                android:background="@drawable/spinner_bg"
                android:prompt="@string/gender_prompt"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-Apgar评分-5分钟" />

            <CheckBox
                android:id="@+id/apgar04CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/apgar03Spinner" />

            <net.xinhuaxing.widget.Spinner
                android:id="@+id/apgar04Spinner"
                style="@style/spinnerbtndropdown"
                android:layout_width="100.0dip"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/apgar04CheckBox"
                android:background="@drawable/spinner_bg"
                android:prompt="@string/gender_prompt"
                app:widgetTag="儿童访视报卡-产时情况-新生儿-Apgar评分-10分钟" />
        </net.xinhuaxing.widget.CheckBoxGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jktj_title"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingRight="30.0dip"
                android:text="先天性或遗传代谢性疾病家族史"
                android:textColor="@color/jz_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/jktj_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50.0dip"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/jzsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="儿童访视报卡-先天性或遗传代谢性疾病家族史" >

            <RadioButton
                android:id="@+id/jzs01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/jzs02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />

            <net.xinhuaxing.widget.EditText
                style="@style/text_edittext_style"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                app:referentId="@+id/jzs02RadioButton" />
        </net.xinhuaxing.widget.RadioGroup>
    </LinearLayout>

</LinearLayout>