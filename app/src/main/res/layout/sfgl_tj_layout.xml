<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dip"
        android:text="本月应随访:"
        android:textColor="@color/text_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/footer_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dip"
        android:text="20人"
        android:textColor="@color/jz_text_color"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:src="@drawable/sfgl_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="已随访:"
        android:textColor="@color/text_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/footer_tips_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dip"
        android:text="20人"
        android:textColor="@color/jz_text_color"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:src="@drawable/sfgl_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="未随访:"
        android:textColor="@color/text_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/footer_tips_notDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dip"
        android:text="16人"
        android:textColor="@color/jz_text_color"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:src="@drawable/sfgl_line" />

    <TextView
        android:id="@+id/footer_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="3dip"
        android:text="下次随访时间:"
        android:textColor="@color/text_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/footer_tips_nexttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dip"
        android:text="2013-3-12"
        android:textColor="@color/jz_text_color"
        android:textSize="20sp" />

</LinearLayout>