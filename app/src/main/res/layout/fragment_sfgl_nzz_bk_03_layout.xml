<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jktj_title"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="30.0dip"
                    android:text="用药情况"
                    android:textColor="@color/jz_text_color"
                    android:textSize="@dimen/dp20" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/jktj_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dp20" />

                <ImageView
                    android:id="@+id/gxyxzImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20.0dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/add_label_bg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="vertical" >

            <com.cking.phss.widget.ListView
                android:id="@+id/gxyyyqkListView"
                style="@style/listview_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:addButton="@id/gxyxzImageView"
                app:addDialogLayout="@layout/dialog_add_yyqk_layout2"
                app:evenLineBackgroundColor="@color/list_osh_background_color"
                app:evenLineTextColor="@color/black"
                app:listItemLayout="@layout/item_yyqk_layout2"
                app:oddLineBackgroundColor="@color/list_jsh_background_color"
                app:oddLineTextColor="@color/black"
                app:titleLayout="@layout/item_yyqk_title_layout2"
                app:type="excel"
                app:widgetTag="脑卒中报卡-个人系统疾病史-高血压-用药情况" >
            </com.cking.phss.widget.ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="糖尿病："
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <net.xinhuaxing.widget.RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="脑卒中报卡-个人系统疾病史-糖尿病" >

            <RadioButton
                android:id="@+id/nrjsr01Radiobutton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/nrjsr02Radiobutton"
                style="@style/radio_button_style"
                android:layout_marginLeft="75.0dip"
                android:layout_toRightOf="@id/nrjsr01Radiobutton" />

            <RadioButton
                android:id="@+id/nrjsr03Radiobutton"
                style="@style/radio_button_style"
                android:layout_marginLeft="75.0dip"
                android:layout_toRightOf="@id/nrjsr02Radiobutton" />
        </net.xinhuaxing.widget.RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="诊断日期：" />

            <net.xinhuaxing.widget.CalendarText
                android:id="@+id/csrqCalendarText"
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_date_bg"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20"
                app:widgetTag="脑卒中报卡-个人系统疾病史-糖尿病-诊断日期" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jktj_title"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="30.0dip"
                    android:text="用药情况"
                    android:textColor="@color/jz_text_color"
                    android:textSize="@dimen/dp20" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/jktj_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dp20" />

                <ImageView
                    android:id="@+id/tnbxzImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20.0dip"
                    android:contentDescription="@string/hello_world"
                    android:src="@drawable/add_label_bg" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="vertical" >

            <com.cking.phss.widget.ListView
                android:id="@+id/tnbyyqkListView"
                style="@style/listview_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:addButton="@id/tnbxzImageView"
                app:addDialogLayout="@layout/dialog_add_yyqk_layout2"
                app:evenLineBackgroundColor="@color/list_osh_background_color"
                app:evenLineTextColor="@color/black"
                app:listItemLayout="@layout/item_yyqk_layout2"
                app:oddLineBackgroundColor="@color/list_jsh_background_color"
                app:oddLineTextColor="@color/black"
                app:titleLayout="@layout/item_yyqk_title_layout2"
                app:type="excel"
                app:widgetTag="脑卒中报卡-个人系统疾病史-糖尿病-用药情况" >
            </com.cking.phss.widget.ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>