<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spinnerutil="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dip"
    android:layout_marginTop="10dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="130.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:gravity="right"
            android:text="选择项目："
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <com.cking.phss.widget.SpinnerUtil
            android:id="@+id/xmlbSpinnerUtil"
            spinnerutil:name="lbcxyjxm"
            style="@style/spinnerbtndropdown"
            android:layout_width="180dip"
            android:layout_marginLeft="20dip"
            android:background="@drawable/spinner_bg"
            android:prompt="@string/xmlb_prompt" />

        <com.cking.phss.widget.SpinnerUtil
            android:id="@+id/xmmcSpinnerUtil"
            style="@style/spinnerbtndropdown"
            android:layout_width="180dip"
            android:layout_marginLeft="20dip"
            android:background="@drawable/spinner_bg"
            android:prompt="@string/xmmc_prompt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:gravity="right"
            android:text="日期："
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20"
            android:visibility="invisible" />

        <com.cking.phss.widget.CalendarText
            android:id="@+id/ksrqCalendarText"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/edit_date_bg"
            android:gravity="left|center_vertical"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <com.cking.phss.widget.CalendarText
            android:id="@+id/jsrqCalendarText"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/edit_date_bg"
            android:gravity="left|center_vertical"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />
    </LinearLayout>

    <Button
        android:id="@+id/cxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:background="@drawable/search_bg"
        android:paddingLeft="@dimen/dp30"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/dp20" />

</LinearLayout>