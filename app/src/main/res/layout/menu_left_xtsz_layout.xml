<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:phss="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_left_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <com.cking.phss.widget.MenuRadioGroup
            android:id="@+id/radiogoup_xtsz"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding20" >

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/radio_yypg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="0"
                phss:checked="true"
                phss:iconDrawableNormal="@drawable/menu_xtsz_jgxx_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_jgxx_normal"
                phss:textNormal="@string/menu_jgxx_text"
                phss:textPress="@string/menu_jgxx_text" />

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/xtsz01MenuRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="1"
                phss:iconDrawableNormal="@drawable/menu_xtsz_gjsz_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_gjsz_normal"
                phss:textNormal="@string/menu_gjsz_text"
                phss:textPress="@string/menu_gjsz_text" />

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/xtsz02MenuRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="2"
                phss:iconDrawableNormal="@drawable/menu_xtsz_gnjs_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_gnjs_normal"
                phss:textNormal="@string/menu_gnjs_text"
                phss:textPress="@string/menu_gnjs_text" />

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/xtsz03MenuRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="3"
                phss:iconDrawableNormal="@drawable/menu_xtsz_bbgx_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_bbgx_normal"
                phss:textNormal="@string/menu_bbgx_text"
                phss:textPress="@string/menu_bbgx_text" />

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/xtsz04MenuRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="4"
                phss:iconDrawableNormal="@drawable/menu_xtsz_jmsp_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_jmsp_normal"
                phss:textNormal="@string/menu_jmsp_text"
                phss:textPress="@string/menu_jmsp_text" />

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/xtsz05MenuRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="5"
                phss:iconDrawableNormal="@drawable/menu_xtsz_bz_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_bz_normal"
                phss:textNormal="@string/menu_bz_text"
                phss:textPress="@string/menu_bz_text" />

            <com.cking.phss.widget.MenuRadioButton
                android:id="@+id/xtsz06MenuRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="6"
                phss:iconDrawableNormal="@drawable/menu_xtsz_gy_pressed"
                phss:iconDrawablePress="@drawable/menu_xtsz_gy_normal"
                phss:textNormal="@string/menu_gy_text"
                phss:textPress="@string/menu_gy_text" />
        </com.cking.phss.widget.MenuRadioGroup>
    </ScrollView>

</LinearLayout>