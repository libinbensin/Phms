<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jktj_title"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingRight="30.0dip"
                android:text="筛选情况"
                android:textColor="@color/jz_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/jktj_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="新生儿畸形："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/jbjzsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="儿童访视报卡-筛选情况-新生儿畸形" >

            <RadioButton
                android:id="@+id/jbjzs01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/jbjzs02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />

            <net.xinhuaxing.widget.EditText
                style="@style/text_edittext_style"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                app:referentId="@+id/jbjzs02RadioButton" />
        </net.xinhuaxing.widget.RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="新生儿听力筛查："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/xsetlscRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="儿童访视报卡-筛选情况-新生儿听力筛查" >

            <RadioButton
                android:id="@+id/xsetlsc01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/xsetlsc02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />

            <RadioButton
                android:id="@+id/xsetlsc03RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />
        </net.xinhuaxing.widget.RadioGroup>

        <net.xinhuaxing.widget.Spinner
            style="@style/spinnerbtndropdown"
            android:background="@drawable/spinner_bg"
            android:prompt="@string/gender_prompt"
            app:widgetTag="儿童访视报卡-筛选情况-新生儿听力筛查-已筛查" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="新生儿疾病筛查："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/xsejbscRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="儿童访视报卡-筛选情况-新生儿疾病筛查" >

            <RadioButton
                android:id="@+id/xsejbsc01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/xsejbsc02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />

            <RadioButton
                android:id="@+id/xsejbsc03RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />
        </net.xinhuaxing.widget.RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal" >

        <net.xinhuaxing.widget.CheckBoxGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dip"
            app:widgetTag="儿童访视报卡-筛选情况-与遗传有关的家族史" >

            <CheckBox
                android:id="@+id/jzs01CheckBox"
                style="@style/compound_button_style" />

            <CheckBox
                android:id="@+id/jzs02CheckBox"
                style="@style/compound_button_style"
                android:layout_marginLeft="40dip"
                android:layout_toRightOf="@+id/jzs01CheckBox" />

            <CheckBox
                android:id="@+id/jzs03CheckBox"
                style="@style/compound_button_style"
                android:layout_marginLeft="40dip"
                android:layout_toRightOf="@+id/jzs02CheckBox" />

            <CheckBox
                android:id="@+id/jzs07CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_alignLeft="@+id/jzs01CheckBox"
                android:layout_below="@+id/jzs01CheckBox"
                android:layout_marginTop="18dip" />

            <CheckBox
                android:id="@+id/jzs08CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_alignLeft="@+id/jzs02CheckBox"
                android:layout_below="@+id/jzs02CheckBox"
                android:layout_marginTop="18dip" />

            <CheckBox
                android:id="@+id/jzs09CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_alignLeft="@+id/jzs03CheckBox"
                android:layout_below="@+id/jzs03CheckBox"
                android:layout_marginTop="18dip" />

            <CheckBox
                android:id="@+id/jzs10CheckBox"
                style="@style/compound_jzs_button_style"
                android:layout_below="@+id/jzs03CheckBox"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="18dip"
                android:layout_toRightOf="@+id/jzs09CheckBox" />
        </net.xinhuaxing.widget.CheckBoxGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="新生儿视力筛查："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/xseslscRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="儿童访视报卡-筛选情况-新生儿视力筛查" >

            <RadioButton
                android:id="@+id/xseslsc01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/xseslsc02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />

            <RadioButton
                android:id="@+id/xseslsc03RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />

            <RadioButton
                android:id="@+id/xseslsc04RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />
        </net.xinhuaxing.widget.RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="其他异常情况：" />

            <net.xinhuaxing.widget.EditText
                style="@style/decimal_edittext_style"
                android:layout_width="180dip"
                android:layout_height="40.0dip"
                app:widgetTag="儿童访视报卡-筛选情况-其他异常情况" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="建档日期：" />

            <net.xinhuaxing.widget.CalendarText
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_date_bg"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20"
                app:widgetTag="儿童访视报卡-筛选情况-建档日期" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:text="建档医生：" />

            <net.xinhuaxing.widget.EditText
                style="@style/decimal_edittext_style"
                android:layout_width="180dip"
                android:layout_height="40.0dip"
                app:widgetTag="儿童访视报卡-筛选情况-建档医生" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/qrButton"
                android:layout_width="120dip"
                android:layout_height="49dip"
                android:layout_marginRight="60dip"
                android:layout_toLeftOf="@+id/fhButton"
                android:background="@drawable/custom_button_bg"
                android:text="确认"
                android:textColor="@color/custom_text_color"
                android:textSize="@dimen/dp20" />

            <Button
                android:id="@+id/fhButton"
                android:layout_width="120dip"
                android:layout_height="49dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dip"
                android:background="@drawable/cancel_bg"
                android:text="返回"
                android:textColor="@color/cancel_text_color"
                android:textSize="@dimen/dp20" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>