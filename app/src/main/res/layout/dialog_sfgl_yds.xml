<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spinnerutil="http://schemas.android.com/apk/res/com.cking.phss"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="430.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/closeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/close_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="药物类型："
                android:textColor="@color/text_gray"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/type_edit"
                android:layout_width="230dip"
                android:layout_height="38dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/edit_box"
                android:paddingLeft="10dip"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="使用频率："
                android:textColor="@color/text_gray"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/frequency_edit"
                android:layout_width="230dip"
                android:layout_height="38dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/edit_box"
                android:paddingLeft="10dip"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="使用剂量："
                android:textColor="@color/text_gray"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/usage_edit"
                android:layout_width="230dip"
                android:layout_height="38dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/edit_box"
                android:paddingLeft="10dip"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/qdButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/comfrim_bg"
                android:text="@string/cm_confirm_text"
                android:textColor="@color/confrim_text_color"
                android:textSize="@dimen/dp20" />

            <Button
                android:id="@+id/qxButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@drawable/cancel_bg"
                android:text="@string/cm_cancel_text"
                android:textColor="@color/cancel_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>