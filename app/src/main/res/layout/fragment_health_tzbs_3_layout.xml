<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/bottomRelativeLayout"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/tzbs_check_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp50"
            android:paddingRight="@dimen/dp50" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:gravity="center"
                android:text="@string/tzbs_psbg_text"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <TextView
                android:id="@+id/jgxx_title_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:text="您的体质: 基本是平和质，倾向"
                android:textColor="@color/jz_text_color"
                android:textSize="@dimen/dp20" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/jgxx_title_text"
                android:layout_marginTop="20dip" >

                <TextView
                    android:id="@+id/tzps_jgxx_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="【特征分析说明】"
                    android:textColor="@color/text_black"
                    android:textSize="22sp" />
            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottomRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dip"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp30"
            android:paddingRight="@dimen/dp30" >

            <Button
                android:id="@+id/tzps_jgxx_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/comfrim_bg"
                android:text="@string/cm_cxcs_text"
                android:textColor="@color/confrim_text_color"
                android:textSize="@dimen/dp20" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>