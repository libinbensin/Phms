<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp30"
    android:paddingRight="@dimen/dp20"
    android:paddingTop="@dimen/dp30" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/xlcs_yy_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_sds" />

            <ImageView
                android:id="@+id/xlcs_jl_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_sas" />

            <ImageView
                android:id="@+id/xlcs_pz_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_psq" />

            <ImageView
                android:id="@+id/xlcs_zs_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_saq" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xlcs_yy_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/xlcs_jl_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/xlcs_pz_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/xlcs_zs_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/xlcs_ucla_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_ucla" />

            <ImageView
                android:id="@+id/xlcs_ss_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_gcq" />

            <ImageView
                android:id="@+id/xlcs_scl90_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_scl" />

            <ImageView
                android:id="@+id/xlcs_qlsca_button"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/mind_qlsca" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xlcs_ucla_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/xlcs_ss_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/xlcs_scl90_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/xlcs_qlsca_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:contentDescription="@string/hello_world"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>