<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp55"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xhTextView"
            android:layout_width="148dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pttj_xuhao_text"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/bl_line_color" />

        <TextView
            android:id="@+id/ysxmTextView"
            android:layout_width="188dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="医生姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/bl_line_color" />

        <TextView
            android:id="@+id/yhmTextView"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户名"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/bl_line_color" />

        <TextView
            android:id="@+id/zjdlsjTextView"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="最近登录时间"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/bl_line_color" />

        <RelativeLayout
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:background="@drawable/xtsz_admin_invalid" />

            <CheckBox
                android:id="@+id/qxCheckBox"
                style="@style/CheckBox5Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:checked="false" />
        </RelativeLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/bl_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/yhztCheckBox"
                style="@style/CheckBox4Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>