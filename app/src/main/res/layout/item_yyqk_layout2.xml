<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gmsBodyLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="42dip"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <net.xinhuaxing.widget.IndexTextView
        android:id="@+id/xhTextView"
        android:layout_width="63dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:beginWith="1"
        app:widgetTag="用药情况-序号" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/ywmcTextView"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-药物名称" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/ywlxTextView"
        android:layout_width="90dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-药物类型" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/ylTextView"
        android:layout_width="86dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-用量" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/ywdwTextView"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-药物单位" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/yfTextView"
        android:layout_width="87dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-用法" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/syzjlTextView"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-使用总剂量" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <net.xinhuaxing.widget.TextView
        android:id="@+id/gyfsTextView"
        android:layout_width="127dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dp20"
        app:widgetTag="用药情况-给药方式" />

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:background="@color/bl_line_color" />

    <LinearLayout
        android:id="@+id/czLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="edit"
            android:onClick="onClick"
            android:src="@drawable/edit_menu_bg" />

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="delete"
            android:onClick="onClick"
            android:src="@drawable/delete_menu_bg" />
    </LinearLayout>

</LinearLayout>