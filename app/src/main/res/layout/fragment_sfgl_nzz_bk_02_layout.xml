<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jktj_title"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingRight="30.0dip"
                android:text="生活习惯"
                android:textColor="@color/jz_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/jktj_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="吸烟：发病后："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/sfxyRadioGroup"
            app:name="SmokingGiveUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="脑卒中报卡-生活习惯-吸烟" >

            <RadioButton
                android:id="@+id/sfxy01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/sfxy02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />
        </net.xinhuaxing.widget.RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="时间(年)："
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <net.xinhuaxing.widget.EditText
                android:id="@+id/bjhhjEditText"
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:numeric="integer"
                app:widgetTag="脑卒中报卡-生活习惯-吸烟-时间(年)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="日吸烟量(支/日)："
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <net.xinhuaxing.widget.EditText
                android:id="@+id/rxylEditText"
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:numeric="integer"
                app:widgetTag="脑卒中报卡-生活习惯-吸烟-日吸烟量(支/日)" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="饮酒：发病后："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/sfyjRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="脑卒中报卡-生活习惯-饮酒" >

            <RadioButton
                android:id="@+id/sfyj01RadioButton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/sfyj02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip" />
        </net.xinhuaxing.widget.RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="时间(年)："
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <net.xinhuaxing.widget.EditText
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:numeric="integer"
                app:widgetTag="脑卒中报卡-生活习惯-饮酒-时间(年)" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="白酒或黄酒："
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <net.xinhuaxing.widget.EditText
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:numeric="integer"
                app:widgetTag="脑卒中报卡-生活习惯-白酒或黄酒" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="两/日"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="150.0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="啤酒："
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />

            <net.xinhuaxing.widget.EditText
                android:id="@+id/pjEditText"
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:numeric="integer"
                app:widgetTag="脑卒中报卡-生活习惯-啤酒" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="杯/日"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dp20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="horizontal" >

        <TextView
            style="@style/title_right_text_style"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:text="每日活动(卒中前)：" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:text="类型：" />

            <net.xinhuaxing.widget.EditText
                android:id="@+id/xmEditText"
                style="@style/text_edittext_style"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                app:widgetTag="脑卒中报卡-生活习惯-每日活动(卒中前)-类型" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/title_right_text_style"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:text="时间：" />

            <net.xinhuaxing.widget.EditText
                style="@style/text_edittext_style"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                app:widgetTag="脑卒中报卡-生活习惯-每日活动(卒中前)-时间" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="right"
            android:text="饮食(卒中前)："
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <net.xinhuaxing.widget.CheckBoxGroup
            android:id="@+id/hxsj_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:widgetTag="脑卒中报卡-生活习惯-饮食(卒中前)" >

            <CheckBox
                android:id="@+id/bxlx01CheckBox"
                style="@style/compound_button_style" />

            <CheckBox
                android:id="@+id/bxlx02CheckBox"
                style="@style/compound_button_style"
                android:layout_marginLeft="40dip"
                android:layout_toRightOf="@+id/bxlx01CheckBox" />

            <CheckBox
                android:id="@+id/bxlx03CheckBox"
                style="@style/compound_button_style"
                android:layout_marginLeft="40dip"
                android:layout_toRightOf="@+id/bxlx02CheckBox" />

            <CheckBox
                android:id="@+id/bxlx04CheckBox"
                style="@style/compound_button_style"
                android:layout_marginLeft="40dip"
                android:layout_toRightOf="@+id/bxlx03CheckBox" />
        </net.xinhuaxing.widget.CheckBoxGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jktj_title"
            android:gravity="left|center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingRight="30.0dip"
                android:text="个人系统疾病史"
                android:textColor="@color/jz_text_color"
                android:textSize="@dimen/dp20" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/jktj_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="高血压："
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp20" />

        <net.xinhuaxing.widget.RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="脑卒中报卡-个人系统疾病史-高血压" >

            <RadioButton
                android:id="@+id/nrjsr01Radiobutton"
                style="@style/radio_button_style" />

            <RadioButton
                android:id="@+id/nrjsr02Radiobutton"
                style="@style/radio_button_style"
                android:layout_marginLeft="75.0dip"
                android:layout_toRightOf="@id/nrjsr01Radiobutton" />

            <RadioButton
                android:id="@+id/nrjsr03Radiobutton"
                style="@style/radio_button_style"
                android:layout_marginLeft="75.0dip"
                android:layout_toRightOf="@id/nrjsr02Radiobutton" />
        </net.xinhuaxing.widget.RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="每周测血压："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.RadioGroup
            android:id="@+id/ywblfyRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:widgetTag="脑卒中报卡-个人系统疾病史-每周测血压" >

            <RadioButton
                android:id="@+id/ywblfy01RadioButton"
                style="@style/radio_button_style"
                android:checked="true"
                android:text="无" />

            <RadioButton
                android:id="@+id/ywblfy02RadioButton"
                style="@style/radio_button_style"
                android:layout_marginLeft="50.0dip"
                android:text="有" />
        </net.xinhuaxing.widget.RadioGroup>

        <TextView
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dip"
            android:gravity="right"
            android:text="平均血压(mmHg)："
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.EditText
            android:id="@+id/xy01EditText"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:background="@drawable/edit_bg"
            android:hint="收缩压"
            android:numeric="integer"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textSize="20sp"
            app:widgetTag="脑卒中报卡-个人系统疾病史-平均血压(mmHg)：1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dip"
            android:text="/"
            android:textColor="@color/text_gray"
            android:textSize="20sp" />

        <net.xinhuaxing.widget.EditText
            android:id="@+id/xy02EditText"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dip"
            android:background="@drawable/edit_bg"
            android:hint="舒张压"
            android:numeric="integer"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textSize="20sp"
            app:widgetTag="脑卒中报卡-个人系统疾病史-平均血压(mmHg)：2" />
    </LinearLayout>

</LinearLayout>